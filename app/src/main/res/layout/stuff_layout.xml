<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/stuff_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stuff Name"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="10dp"/>

                <!--<TextView
                    android:id="@+id/stuff_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type:: "
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>-->

                <TextView
                    android:id="@+id/stuff_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail Id:  "
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/stuff_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact No.:  "
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/stuff_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cverage Area:  "
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"/>

                <!--<ImageView
                    android:id="@+id/img_edit1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="end"/>-->
                <Button
                    android:id="@+id/stuff_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_add"
                    android:layout_gravity="end"
                    android:text="DELETE"
                    android:textColor="#fff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>